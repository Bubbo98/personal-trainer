{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "backend/database/**",
          "backend/middleware/**",
          "backend/routes/**",
          "backend/scripts/**",
          "backend/services/**"
        ]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/backend/server.js"
    },
    {
      "source": "/robots.txt",
      "destination": "/backend/server.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/backend/server.js"
    },
    {
      "source": "/database/(.*)",
      "destination": "/404.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}